<% was_validated = visitor.errors.any? %>

<%= form_with(model: visitor, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% email_class = "form-control" %>
    <% email_was_invalid = visitor.errors.include?(:email) %>

    <% if was_validated %>
      <% if email_was_invalid %>
        <% email_class << " is-invalid" %>
      <% else %>
        <% email_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :email %>
    <%= f.text_field :email, class: email_class, placeholder: "Enter email" %>
    <% if email_was_invalid %>
      <% visitor.errors.full_messages_for(:email).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% password_class = "form-control" %>
    <% password_was_invalid = visitor.errors.include?(:password) %>

    <% if was_validated %>
