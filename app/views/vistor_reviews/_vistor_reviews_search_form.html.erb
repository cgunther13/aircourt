<%= search_form_for @q, :class => collapse_search_form, :id => "vistor_reviews_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :score, "Score" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :score_gteq, :class => "form-control", :placeholder => "Score greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :score_lteq, :class => "form-control", :placeholder => "Score less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body_cont, "Body contains" %>
    <%= f.text_field :body_cont, :class => "form-control", :placeholder => "Body contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :start_time, "Reservation Start time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='reservationgteqstart_timePicker' data-target-input="nearest">
          <%= f.text_field :reservation_start_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Reservation Start time greater than or equal to", :data => {:target => '#reservationgteqstart_timePicker'} %>
          <div class="input-group-append" data-target='#reservationgteqstart_timePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='reservationlteqstart_timePicker' data-target-input="nearest">
          <%= f.text_field :reservation_start_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Reservation Start time less than or equal to", :data => {:target => '#reservationlteqstart_timePicker'} %>
          <div class="input-group-append" data-target='#reservationlteqstart_timePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#reservationgteqstart_timePicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#reservationlteqstart_timePicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#reservationgteqstart_timePicker').on("dp.change", function (e) {
              $('#reservationlteqstart_timePicker').data("DateTimePicker").minDate(e.date);
          });
          $('#reservationlteqstart_timePicker').on("dp.change", function (e) {
              $('#reservationgteqstart_timePicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :renter_email_cont, "Renter email contains" %>
    <%= f.text_field :renter_email_cont, :class => "form-control", :placeholder => "Renter email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/vistor_reviews" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#vistor_reviews_filters">
  Show filters
</a>
