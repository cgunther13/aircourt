<%= form_with(model: @court_review, local: true) do |f| %>

  <%= f.hidden_field :reservation_id, value: @reservation.id %>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :score %>

    <%= f.text_field :score, class: "form-control" %>
  </div>

  <%= f.submit "Create court review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
