<% was_validated = court.errors.any? %>

<%= form_with(model: court, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% renter_class = "form-control" %>
    <% renter_was_invalid = court.errors.include?(:renter) %>

    <% if was_validated %>
      <% if renter_was_invalid %>
        <% renter_class << " is-invalid" %>
      <% else %>
        <% renter_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :renter_id %>
    <%= f.collection_select :renter_id, Renter.all, :id, :to_s, {}, class: "form-control" %>
    <% if renter_was_invalid %>
      <% court.errors.full_messages_for(:renter).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% court_type_class = "form-control" %>
    <% court_type_was_invalid = court.errors.include?(:court_type) %>

    <% if was_validated %>
      <% if court_type_was_invalid %>
        <% court_type_class << " is-invalid" %>
      <% else %>
        <% court_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :court_type %>
    <%= f.select :court_type, options_for_select(Court.court_types.keys), {}, class: "form-control" %>
    <% if court_type_was_invalid %>
      <% court.errors.full_messages_for(:court_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% direction_class = "form-control" %>
    <% direction_was_invalid = court.errors.include?(:direction) %>

    <% if was_validated %>
      <% if direction_was_invalid %>
        <% direction_class << " is-invalid" %>
      <% else %>
        <% direction_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :directions %>
    <%= f.text_area :directions, class: direction_class, placeholder: "Enter direction" %>
    <% if direction_was_invalid %>
      <% court.errors.full_messages_for(:direction).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% court_rule_class = "form-control" %>
    <% court_rule_was_invalid = court.errors.include?(:court_rule) %>

    <% if was_validated %>
      <% if court_rule_was_invalid %>
        <% court_rule_class << " is-invalid" %>
      <% else %>
        <% court_rule_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :court_rules %>
    <%= f.text_area :court_rules, class: court_rule_class, placeholder: "Enter court rule" %>
    <% if court_rule_was_invalid %>
      <% court.errors.full_messages_for(:court_rule).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% location_class = "form-control" %>
    <% location_was_invalid = court.errors.include?(:location) %>

    <% if was_validated %>
      <% if location_was_invalid %>
        <% location_class << " is-invalid" %>
      <% else %>
        <% location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location %>
    <%= f.text_field :location, class: location_class, placeholder: "Enter location" %>
    <% if location_was_invalid %>
      <% court.errors.full_messages_for(:location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% photo_class = "form-control" %>
    <% photo_was_invalid = court.errors.include?(:photo) %>

    <% if was_validated %>
      <% if photo_was_invalid %>
        <% photo_class << " is-invalid" %>
      <% else %>
        <% photo_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :photo %>
    <%= f.file_field :photo, class: "form-control" %>
    <% if photo_was_invalid %>
      <% court.errors.full_messages_for(:photo).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% max_guest_class = "form-control" %>
    <% max_guest_was_invalid = court.errors.include?(:max_guest) %>

    <% if was_validated %>
      <% if max_guest_was_invalid %>
        <% max_guest_class << " is-invalid" %>
      <% else %>
        <% max_guest_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :max_guests %>
    <%= f.number_field :max_guests, class: max_guest_class, placeholder: "Enter max guest" %>
    <% if max_guest_was_invalid %>
      <% court.errors.full_messages_for(:max_guest).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
