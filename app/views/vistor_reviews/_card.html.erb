<div class="card mb-3">
  <h2 class="card-header h4">
    Vistor Review #<%= vistor_review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Reservation</dt>
      <!-- Display reservation_id start -->
      <dd><%= vistor_review.reservation_id %></dd>
      <!-- Display reservation_id end -->

      <dt>Body</dt>
      <!-- Display body start -->
      <dd><%= vistor_review.body %></dd>
      <!-- Display body end -->

      <dt>Score</dt>
      <!-- Display score start -->
      <dd><%= vistor_review.score %></dd>
      <!-- Display score end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back vistor_review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link vistor_review start -->
      <div class="col">
        <%= link_to edit_vistor_review_url(vistor_review), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link vistor_review end -->

      <!-- Delete link vistor_review start -->
      <div class="col">
        <%= link_to vistor_review, method: :delete, data: { confirm: "Do you really want to delete this vistor_review?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link vistor_review end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(vistor_review.updated_at) %> ago
  </div>
</div>
