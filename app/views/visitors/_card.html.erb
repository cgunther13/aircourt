<div class="card mb-3">
  <h2 class="card-header h4">
    Visitor #<%= visitor.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Email</dt>
      <dd><%= visitor.email %></dd>

      <dt>Password</dt>
      <dd><%= visitor.password %></dd>

      <dt>Username</dt>
      <dd><%= visitor.username %></dd>

      <dt>First name</dt>
      <dd><%= visitor.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= visitor.last_name %></dd>

      <dt>Sports interests</dt>
      <dd><%= visitor.sports_interests %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back visitor, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_visitor_url(visitor), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to visitor, method: :delete, data: { confirm: "Do you really want to delete this visitor?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(visitor.updated_at) %> ago
  </div>
</div>
