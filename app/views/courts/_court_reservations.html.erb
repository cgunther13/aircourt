<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reservations

    <a data-toggle="collapse" href="#court_reservations_new_form">
      Add reservation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @court.reservations.each do |reservation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to reservation, reservation %>

        <%= link_to reservation, method: :delete, data: { confirm: "Do you really want to delete this reservation" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="court_reservations_new_form">
        <%= render partial: "courts/court_reservations_new_form" %>
      </div>
    </div>

  </ul>
</div>
