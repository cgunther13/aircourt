<%= search_form_for @q, :class => collapse_search_form, :id => "courts_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :max_guests, "Max guests" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :max_guests_gteq, :class => "form-control", :placeholder => "Max guests greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :max_guests_lteq, :class => "form-control", :placeholder => "Max guests less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :court_rules_cont, "Court rules contains" %>
    <%= f.text_field :court_rules_cont, :class => "form-control", :placeholder => "Court rules contains" %>
  </div>

  <div class="form-group">
    <%= f.label :directions_cont, "Directions contains" %>
    <%= f.text_field :directions_cont, :class => "form-control", :placeholder => "Directions contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :renter_email_cont, "Renter email contains" %>
    <%= f.text_field :renter_email_cont, :class => "form-control", :placeholder => "Renter email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, "Reservation Start time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='reservationsgteqstart_timePicker' data-target-input="nearest">
          <%= f.text_field :reservations_start_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Reservation Start time greater than or equal to", :data => {:target => '#reservationsgteqstart_timePicker'} %>
          <div class="input-group-append" data-target='#reservationsgteqstart_timePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='reservationslteqstart_timePicker' data-target-input="nearest">
          <%= f.text_field :reservations_start_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Reservation Start time less than or equal to", :data => {:target => '#reservationslteqstart_timePicker'} %>
          <div class="input-group-append" data-target='#reservationslteqstart_timePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#reservationsgteqstart_timePicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#reservationslteqstart_timePicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#reservationsgteqstart_timePicker').on("dp.change", function (e) {
              $('#reservationslteqstart_timePicker').data("DateTimePicker").minDate(e.date);
          });
          $('#reservationslteqstart_timePicker').on("dp.change", function (e) {
              $('#reservationsgteqstart_timePicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :vistors_email_cont, "Vistors email contains" %>
    <%= f.text_field :vistors_email_cont, :class => "form-control", :placeholder => "Vistors email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/courts" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#courts_filters">
  Show filters
</a>
