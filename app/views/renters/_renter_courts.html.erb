<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Courts

    <a data-toggle="collapse" href="#renter_courts_new_form">
      Add court
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @renter.courts.each do |court| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to court, court %>

        <%= link_to court, method: :delete, data: { confirm: "Do you really want to delete this court" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="renter_courts_new_form">
        <%= render partial: "renters/renter_courts_new_form" %>
      </div>
    </div>

  </ul>
</div>
