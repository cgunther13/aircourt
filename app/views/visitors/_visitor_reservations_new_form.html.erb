<!-- Form reservation start -->
<%= form_with(model: @reservation, local: true) do |f| %>
<!-- Form reservation end -->

  <!-- Label and input for start_time start -->
  <div class="form-group">
    <%= f.label :start_time %>
    <!-- Input for start_time start -->
    <%= f.datetime_select :start_time, class: "form-control" %>
    <!-- Input for start_time end -->
  </div>
  <!-- Label and input for start_time end -->

  <!-- Label and input for end_time start -->
  <div class="form-group">
    <%= f.label :end_time %>
    <!-- Input for end_time start -->
    <%= f.datetime_select :end_time, class: "form-control" %>
    <!-- Input for end_time end -->
  </div>
  <!-- Label and input for end_time end -->

  <!-- Label and input for court_id start -->
  <div class="form-group">
    <%= f.label :court_id %>

    <!-- Input for court_id start -->
    <%= f.collection_select :court_id, Court.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for court_id end -->
  </div>
  <!-- Label and input for court_id end -->

  <!-- Label and input for vistor_id start -->
  <!-- Input for vistor_id start -->
  <%= f.hidden_field :vistor_id, value: @visitor.id %>
  <!-- Input for vistor_id end -->
  <!-- Label and input for vistor_id end -->

  <%= f.submit "Create reservation", class: "btn btn-block btn-outline-secondary" %>
<% end %>
