<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Vistor Reviews

    <a data-toggle="collapse" href="#reservation_vistor_reviews_new_form">
      Add vistor review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @reservation.vistor_reviews.each do |vistor_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to vistor_review, vistor_review %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to vistor_review, method: :delete, data: { confirm: "Do you really want to delete this vistor_review" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="reservation_vistor_reviews_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "reservations/reservation_vistor_reviews_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
