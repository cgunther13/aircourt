<div class="card mb-3">
  <h2 class="card-header h4">
    Court #<%= court.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Renter</dt>
      <!-- Display renter_id start -->
      <dd><%= court.renter_id %></dd>
      <!-- Display renter_id end -->

      <dt>Court type</dt>
      <!-- Display court_type start -->
      <dd><%= court.court_type %></dd>
      <!-- Display court_type end -->

      <dt>Directions</dt>
      <!-- Display directions start -->
      <dd><%= court.directions %></dd>
      <!-- Display directions end -->

      <dt>Court rules</dt>
      <!-- Display court_rules start -->
      <dd><%= court.court_rules %></dd>
      <!-- Display court_rules end -->

      <dt>Location</dt>
      <!-- Display location start -->
      <dd><%= court.location %></dd>
      <!-- Display location end -->

      <dt>Photo</dt>
      <!-- Display photo start -->
      <dd>
        <%= cl_image_tag @court.photo, class: "img-fluid" %>
      </dd>
      <!-- Display photo end -->

      <dt>Max guests</dt>
      <!-- Display max_guests start -->
      <dd><%= court.max_guests %></dd>
      <!-- Display max_guests end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back court, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link court start -->
      <div class="col">
        <%= link_to edit_court_url(court), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link court end -->

      <!-- Delete link court start -->
      <div class="col">
        <%= link_to court, method: :delete, data: { confirm: "Do you really want to delete this court?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link court end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(court.updated_at) %> ago
  </div>
</div>
