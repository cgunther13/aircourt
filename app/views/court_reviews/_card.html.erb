<div class="card mb-3">
  <h2 class="card-header h4">
    Court Review #<%= court_review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Reservation</dt>
      <dd>
        <% if @court_review.reservation.present? %>
          <%= link_to court_review.reservation, court_review.reservation %>
        <% end %>
      </dd>

      <dt>Body</dt>
      <dd><%= court_review.body %></dd>

      <dt>Score</dt>
      <dd><%= court_review.score %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back court_review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_court_review_url(court_review), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to court_review, method: :delete, data: { confirm: "Do you really want to delete this court_review?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(court_review.updated_at) %> ago
  </div>
</div>
