<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Court Reviews

    <a data-toggle="collapse" href="#reservation_court_reviews_new_form">
      Add court review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @reservation.court_reviews.each do |court_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to court_review, court_review %>

        <%= link_to court_review, method: :delete, data: { confirm: "Do you really want to delete this court_review" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="reservation_court_reviews_new_form">
        <%= render partial: "reservations/reservation_court_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
