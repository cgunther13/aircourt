<div class="card mb-3">
  <h2 class="card-header h4">
    Renter #<%= renter.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Email</dt>
      <dd><%= renter.email %></dd>

      <dt>Password</dt>
      <dd><%= renter.password %></dd>

      <dt>Username</dt>
      <dd><%= renter.username %></dd>

      <dt>First name</dt>
      <dd><%= renter.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= renter.last_name %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back renter, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_renter_url(renter), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to renter, method: :delete, data: { confirm: "Do you really want to delete this renter?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(renter.updated_at) %> ago
  </div>
</div>
